{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,  // Added to bypass issues with 3rd-party type definitions
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/types/**/*"], // Explicitly include types directory
  "exclude": ["node_modules"]
}
